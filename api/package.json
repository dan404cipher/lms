{
  "name": "lms-backend",
  "version": "1.0.0",
  "description": "Learning Management System Backend",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc --pretty",
    "build:verbose": "tsc --pretty --listFiles",
    "test": "jest",
    "test:email": "ts-node -r dotenv/config src/utils/emailTest.ts",
    "setup:email": "node scripts/setup-email.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "setup": "npm run build && node scripts/setup.js",
    "seed:users": "ts-node -r dotenv/config scripts/seedUsers.ts",
    "list-users": "ts-node -r dotenv/config scripts/listUsers.ts",
    "set-zoom-emails": "ts-node -r dotenv/config scripts/setZoomEmails.ts",
    "update-user-zoom": "ts-node -r dotenv/config scripts/updateUserZoomEmail.ts",
    "init-zoom-hosts": "ts-node -r dotenv/config scripts/initializeZoomHosts.ts",
    "sync-zoom-hosts": "ts-node -r dotenv/config scripts/syncZoomHosts.ts"
  },
  "keywords": [
    "lms",
    "education",
    "typescript",
    "mongodb"
  ],
  "author": "LMS Team",
  "license": "MIT",
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "aws-sdk": "^2.1490.0",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "ffmpeg-static": "^5.2.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "mp4box": "^2.1.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.9.0",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
